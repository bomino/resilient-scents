---
interface Props {
  testimonial: {
    id: number;
    name: string;
    location: string;
    product: string;
    text: string;
    rating: number;
  };
  index?: number;
}

const { testimonial, index = 0 } = Astro.props;
---

<div class="relative p-8 bg-mint-50/50 reveal" style={`animation-delay: ${index * 150}ms`}>
  <!-- Decorative Quote -->
  <div class="absolute top-4 right-4 text-mint-200">
    <svg class="w-12 h-12" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
    </svg>
  </div>

  <!-- Rating Stars -->
  <div class="flex gap-1 mb-4">
    {Array.from({ length: testimonial.rating }).map(() => (
      <svg class="w-4 h-4 text-mint-500" fill="currentColor" viewBox="0 0 20 20">
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
    ))}
  </div>

  <!-- Quote Text -->
  <blockquote class="font-body text-slate-700 leading-relaxed mb-6">
    "{testimonial.text}"
  </blockquote>

  <!-- Attribution -->
  <div class="flex items-center justify-between">
    <div>
      <p class="font-display text-navy-900 font-medium">{testimonial.name}</p>
      <p class="text-sm text-slate-500">{testimonial.location}</p>
    </div>
    <span class="px-3 py-1 bg-mint-100 text-navy-700 text-xs font-medium">
      {testimonial.product}
    </span>
  </div>
</div>
