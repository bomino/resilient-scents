---
import MainLayout from '../../layouts/MainLayout.astro';
import productsData from '../../data/products.json';

const products = productsData.products;

export function getStaticPaths() {
  const productsData = (await import('../../data/products.json')).default;
  return productsData.products.map((product) => ({
    params: { slug: product.slug },
    props: { product },
  }));
}

const base = import.meta.env.BASE_URL;
const { product } = Astro.props;

// Helper to fix image paths for base URL
const getImagePath = (imagePath: string) => {
  if (imagePath.startsWith('/')) {
    return `${base}${imagePath.slice(1)}`;
  }
  return imagePath;
};

// Get related products (same category, excluding current)
const relatedProducts = products
  .filter(p => p.category === product.category && p.id !== product.id)
  .slice(0, 3);
---

<MainLayout
  title={product.name}
  description={`${product.name} - ${product.tagline}. ${product.vibe}`}
>
  <!-- Breadcrumb -->
  <div class="pt-24 lg:pt-28 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-4">
      <nav class="flex items-center gap-2 text-sm">
        <a href={base} class="text-slate-500 hover:text-navy-600 transition-colors">Home</a>
        <span class="text-slate-300">/</span>
        <a href={`${base}shop/`} class="text-slate-500 hover:text-navy-600 transition-colors">Shop</a>
        <span class="text-slate-300">/</span>
        <span class="text-navy-900 font-medium">{product.name}</span>
      </nav>
    </div>
  </div>

  <!-- Product Section -->
  <section class="py-8 lg:py-16 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
        <!-- Product Images -->
        <div class="space-y-4">
          <!-- Main Image -->
          <div class="relative aspect-[4/5] bg-gradient-to-br from-mint-100 to-white overflow-hidden">
            <!-- Product Image -->
            <img
              src={getImagePath(product.images[0])}
              alt={product.name}
              class="absolute inset-0 w-full h-full object-cover"
            />

            <!-- Badge -->
            {product.badge && (
              <div class="absolute top-4 left-4 z-10">
                <span class="inline-block px-4 py-2 bg-navy-800 text-white text-sm font-medium tracking-wide">
                  {product.badge}
                </span>
              </div>
            )}
          </div>

          <!-- Thumbnail Gallery -->
          <div class="grid grid-cols-4 gap-3">
            {product.images.map((img: string, i: number) => (
              <button class={`aspect-square overflow-hidden border-2 transition-colors ${i === 0 ? 'border-navy-500' : 'border-transparent hover:border-slate-300'}`}>
                <img src={getImagePath(img)} alt={`${product.name} view ${i + 1}`} class="w-full h-full object-cover" />
              </button>
            ))}
          </div>
        </div>

        <!-- Product Info -->
        <div class="lg:sticky lg:top-32 lg:self-start">
          <div class="space-y-6">
            <!-- Category & Name -->
            <div>
              <span class="inline-block px-3 py-1 bg-mint-100 text-navy-600 text-xs font-medium tracking-wide uppercase mb-3">
                {product.category}
              </span>
              <h1 class="font-display text-4xl lg:text-5xl font-medium text-navy-900 mb-2">
                {product.name}
              </h1>
              <p class="font-accent text-xl italic text-navy-600">
                {product.tagline}
              </p>
            </div>

            <!-- Price -->
            <div class="flex items-baseline gap-2">
              <span class="font-display text-3xl font-semibold text-navy-900">
                ${product.price}
              </span>
              <span class="text-sm text-slate-500">USD</span>
            </div>

            <!-- Vibe/Description -->
            <p class="font-body text-lg text-slate-600 leading-relaxed border-l-4 border-mint-400 pl-4">
              {product.vibe}
            </p>

            <!-- Scent Notes -->
            <div class="bg-mint-50/50 p-6 space-y-4">
              <h3 class="font-display text-lg font-medium text-navy-900">Scent Profile</h3>
              <div class="space-y-3">
                <div class="flex items-start gap-3">
                  <span class="flex-shrink-0 w-16 text-xs font-medium uppercase tracking-wide text-mint-600">Top</span>
                  <div class="flex flex-wrap gap-2">
                    {product.scent_notes.top.map((note: string) => (
                      <span class="px-3 py-1 bg-mint-100 text-navy-700 text-sm">{note}</span>
                    ))}
                  </div>
                </div>
                <div class="flex items-start gap-3">
                  <span class="flex-shrink-0 w-16 text-xs font-medium uppercase tracking-wide text-navy-600">Heart</span>
                  <div class="flex flex-wrap gap-2">
                    {product.scent_notes.middle.map((note: string) => (
                      <span class="px-3 py-1 bg-navy-100 text-navy-700 text-sm">{note}</span>
                    ))}
                  </div>
                </div>
                <div class="flex items-start gap-3">
                  <span class="flex-shrink-0 w-16 text-xs font-medium uppercase tracking-wide text-slate-600">Base</span>
                  <div class="flex flex-wrap gap-2">
                    {product.scent_notes.base.map((note: string) => (
                      <span class="px-3 py-1 bg-slate-100 text-slate-700 text-sm">{note}</span>
                    ))}
                  </div>
                </div>
              </div>
            </div>

            <!-- Best For -->
            <div>
              <h3 class="font-display text-sm font-medium text-slate-500 uppercase tracking-wide mb-3">Best For</h3>
              <div class="flex flex-wrap gap-2">
                {product.best_for.map((use: string) => (
                  <span class="px-4 py-2 bg-mint-100 text-navy-700 text-sm font-medium">{use}</span>
                ))}
              </div>
            </div>

            <!-- Size Selection -->
            <div>
              <h3 class="font-display text-sm font-medium text-slate-500 uppercase tracking-wide mb-3">Select Size</h3>
              <div class="grid grid-cols-3 gap-3" id="size-selector">
                {product.sizes.map((size: { size: string; price: number }, index: number) => (
                  <button
                    class={`p-4 text-center border-2 transition-all duration-300 size-btn ${
                      index === 1 ? 'border-navy-500 bg-navy-50' : 'border-slate-200 hover:border-slate-400'
                    }`}
                    data-size={size.size}
                    data-price={size.price}
                  >
                    <span class="block font-medium text-navy-900">{size.size}</span>
                    <span class="block text-sm text-navy-600">${size.price}</span>
                  </button>
                ))}
              </div>
            </div>

            <!-- Add to Inquiry / Contact -->
            <div class="space-y-4 pt-4">
              <a href={`${base}contact/`} class="btn-primary w-full text-center">
                Inquire About This Scent
                <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                </svg>
              </a>
              <p class="text-center text-sm text-slate-500">
                Call or Text: <a href="tel:347-806-3191" class="text-navy-600 hover:underline font-medium">347-806-3191</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Product Details Tabs -->
  <section class="py-16 lg:py-24 bg-mint-50/30">
    <div class="max-w-4xl mx-auto px-6 lg:px-8">
      <!-- Tab Navigation -->
      <div class="flex border-b border-slate-200 mb-8" id="tab-nav">
        <button class="tab-btn px-6 py-3 text-sm font-medium border-b-2 border-navy-600 text-navy-600 -mb-px" data-tab="ingredients">
          Ingredients
        </button>
        <button class="tab-btn px-6 py-3 text-sm font-medium text-slate-500 hover:text-slate-700 transition-colors" data-tab="how-to-use">
          How to Use
        </button>
        <button class="tab-btn px-6 py-3 text-sm font-medium text-slate-500 hover:text-slate-700 transition-colors" data-tab="safety">
          Safety & Care
        </button>
      </div>

      <!-- Tab Content -->
      <div id="tab-content">
        <div class="tab-panel" data-panel="ingredients">
          <h3 class="font-display text-2xl font-medium text-navy-900 mb-4">What's Inside</h3>
          <p class="font-body text-slate-600 leading-relaxed mb-6">
            {product.ingredients}
          </p>
          <div class="grid sm:grid-cols-3 gap-4">
            <div class="p-4 bg-white">
              <div class="w-10 h-10 bg-mint-100 rounded-full flex items-center justify-center mb-3">
                <svg class="w-5 h-5 text-mint-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <h4 class="font-medium text-navy-900 mb-1">100% Vegan</h4>
              <p class="text-sm text-slate-500">No animal-derived ingredients</p>
            </div>
            <div class="p-4 bg-white">
              <div class="w-10 h-10 bg-mint-100 rounded-full flex items-center justify-center mb-3">
                <svg class="w-5 h-5 text-mint-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
                </svg>
              </div>
              <h4 class="font-medium text-navy-900 mb-1">Cruelty Free</h4>
              <p class="text-sm text-slate-500">Never tested on animals</p>
            </div>
            <div class="p-4 bg-white">
              <div class="w-10 h-10 bg-mint-100 rounded-full flex items-center justify-center mb-3">
                <svg class="w-5 h-5 text-mint-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707" />
                </svg>
              </div>
              <h4 class="font-medium text-navy-900 mb-1">Skin-Loving</h4>
              <p class="text-sm text-slate-500">Nourishing carrier oils</p>
            </div>
          </div>
        </div>

        <div class="tab-panel hidden" data-panel="how-to-use">
          <h3 class="font-display text-2xl font-medium text-navy-900 mb-4">Application Guide</h3>
          <p class="font-body text-slate-600 leading-relaxed mb-6">
            {product.how_to_use}
          </p>
          <div class="space-y-4">
            <div class="flex gap-4 items-start">
              <span class="flex-shrink-0 w-8 h-8 bg-navy-100 text-navy-600 rounded-full flex items-center justify-center font-medium">1</span>
              <div>
                <h4 class="font-medium text-navy-900 mb-1">Start with clean skin</h4>
                <p class="text-sm text-slate-500">Apply after a shower or bath when your skin is warm and pores are open for best absorption.</p>
              </div>
            </div>
            <div class="flex gap-4 items-start">
              <span class="flex-shrink-0 w-8 h-8 bg-navy-100 text-navy-600 rounded-full flex items-center justify-center font-medium">2</span>
              <div>
                <h4 class="font-medium text-navy-900 mb-1">Focus on pulse points</h4>
                <p class="text-sm text-slate-500">Apply to wrists, neck, behind ears, and inside elbows where body heat helps diffuse the fragrance.</p>
              </div>
            </div>
            <div class="flex gap-4 items-start">
              <span class="flex-shrink-0 w-8 h-8 bg-navy-100 text-navy-600 rounded-full flex items-center justify-center font-medium">3</span>
              <div>
                <h4 class="font-medium text-navy-900 mb-1">Layer for intensity</h4>
                <p class="text-sm text-slate-500">For a stronger scent, apply over unscented lotion or layer multiple applications.</p>
              </div>
            </div>
          </div>
        </div>

        <div class="tab-panel hidden" data-panel="safety">
          <h3 class="font-display text-2xl font-medium text-navy-900 mb-4">Safety Information</h3>
          <div class="bg-mint-100 border-l-4 border-mint-500 p-4 mb-6">
            <p class="font-body text-navy-800">
              {product.warnings}
            </p>
          </div>
          <div class="space-y-4">
            <div class="p-4 bg-white">
              <h4 class="font-medium text-navy-900 mb-2">Patch Test Recommended</h4>
              <p class="text-sm text-slate-500">Apply a small amount to your inner arm 24 hours before full use, especially if you have sensitive skin or known allergies.</p>
            </div>
            <div class="p-4 bg-white">
              <h4 class="font-medium text-navy-900 mb-2">Storage</h4>
              <p class="text-sm text-slate-500">Store in a cool, dark place away from direct sunlight. Best used within 12 months of opening for optimal fragrance.</p>
            </div>
            <div class="p-4 bg-white">
              <h4 class="font-medium text-navy-900 mb-2">Shelf Life</h4>
              <p class="text-sm text-slate-500">Unopened: 18-24 months. Opened: Best within 12 months.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Products -->
  {relatedProducts.length > 0 && (
    <section class="py-16 lg:py-24 bg-white">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <h2 class="font-display text-3xl font-medium text-navy-900 mb-8 text-center">You Might Also Love</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
          {relatedProducts.map((related) => (
            <a href={`${base}shop/${related.slug}/`} class="group block bg-mint-50/50 transition-all duration-500 hover:shadow-xl">
              <div class="relative aspect-[3/4] overflow-hidden bg-gradient-to-br from-mint-100 to-white">
                <img
                  src={getImagePath(related.images[0])}
                  alt={related.name}
                  class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                />
              </div>
              <div class="p-4">
                <h3 class="font-display text-lg font-medium text-navy-900 group-hover:text-navy-600 transition-colors">{related.name}</h3>
                <p class="font-accent text-sm italic text-slate-500 mb-2">{related.tagline}</p>
                <span class="text-navy-600 font-medium">${related.price}</span>
              </div>
            </a>
          ))}
        </div>
      </div>
    </section>
  )}
</MainLayout>

<script>
  // Size selector
  const sizeButtons = document.querySelectorAll('.size-btn');
  sizeButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      sizeButtons.forEach(b => {
        b.classList.remove('border-navy-500', 'bg-navy-50');
        b.classList.add('border-slate-200');
      });
      btn.classList.remove('border-slate-200');
      btn.classList.add('border-navy-500', 'bg-navy-50');
    });
  });

  // Tab functionality
  const tabButtons = document.querySelectorAll('.tab-btn');
  const tabPanels = document.querySelectorAll('.tab-panel');

  tabButtons.forEach(btn => {
    btn.addEventListener('click', () => {
      const tabId = btn.getAttribute('data-tab');

      // Update button styles
      tabButtons.forEach(b => {
        b.classList.remove('border-b-2', 'border-navy-600', 'text-navy-600', '-mb-px');
        b.classList.add('text-slate-500');
      });
      btn.classList.add('border-b-2', 'border-navy-600', 'text-navy-600', '-mb-px');
      btn.classList.remove('text-slate-500');

      // Show/hide panels
      tabPanels.forEach(panel => {
        if (panel.getAttribute('data-panel') === tabId) {
          panel.classList.remove('hidden');
        } else {
          panel.classList.add('hidden');
        }
      });
    });
  });
</script>
