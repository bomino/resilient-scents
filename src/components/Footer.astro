---
const currentYear = new Date().getFullYear();

const footerLinks = {
  shop: [
    { href: '/shop?category=women', label: 'Women' },
    { href: '/shop?category=men', label: 'Men' },
    { href: '/shop?category=unisex', label: 'Unisex' },
    { href: '/shop', label: 'All Products' },
  ],
  company: [
    { href: '/about', label: 'Our Story' },
    { href: '/faq', label: 'FAQ' },
    { href: '/contact', label: 'Contact' },
  ],
  legal: [
    { href: '/privacy', label: 'Privacy Policy' },
    { href: '/terms', label: 'Terms of Service' },
    { href: '/returns', label: 'Returns & Refunds' },
    { href: '/shipping', label: 'Shipping' },
  ],
};
---

<footer class="bg-navy-900 text-white">
  <!-- Main Footer -->
  <div class="max-w-7xl mx-auto px-6 lg:px-8 py-16 lg:py-24">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-8">
      <!-- Brand Column -->
      <div class="lg:col-span-4">
        <a href="/" class="inline-block">
          <img
            src="/images/logo.png"
            alt="Resilient Scents"
            class="h-14 w-auto brightness-0 invert"
          />
        </a>
        <p class="mt-6 text-slate-300 font-body leading-relaxed max-w-sm">
          Empowerment in every drop. Premium fragrance oils and body butters crafted to celebrate your strength, confidence, and self-love.
        </p>

        <!-- Contact Info -->
        <div class="mt-6 space-y-2">
          <a href="tel:919-295-0397" class="flex items-center gap-2 text-mint-400 hover:text-mint-300 transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            <span class="font-medium">919-295-0397</span>
          </a>
        </div>

        <!-- Newsletter -->
        <div class="mt-8">
          <p class="text-sm font-medium text-white mb-3">Join the community</p>
          <form class="flex gap-2" action="https://formspree.io/f/yourformid" method="POST">
            <input
              type="email"
              name="email"
              placeholder="Enter your email"
              required
              class="flex-grow px-4 py-3 bg-navy-800 border border-navy-700 text-white placeholder-slate-500 text-sm focus:outline-none focus:border-mint-500 transition-colors"
            />
            <button type="submit" class="px-6 py-3 bg-mint-500 text-navy-900 font-medium text-sm hover:bg-mint-400 transition-colors">
              Join
            </button>
          </form>
          <p class="mt-2 text-xs text-slate-500">First access to new drops & exclusive offers.</p>
        </div>
      </div>

      <!-- Links Columns -->
      <div class="lg:col-span-8 grid grid-cols-2 sm:grid-cols-3 gap-8 lg:gap-12 lg:pl-12">
        <!-- Shop -->
        <div>
          <h3 class="font-display text-lg font-medium text-white mb-4">Shop</h3>
          <ul class="space-y-3">
            {footerLinks.shop.map((link) => (
              <li>
                <a href={link.href} class="text-slate-300 hover:text-mint-400 transition-colors text-sm">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Company -->
        <div>
          <h3 class="font-display text-lg font-medium text-white mb-4">Company</h3>
          <ul class="space-y-3">
            {footerLinks.company.map((link) => (
              <li>
                <a href={link.href} class="text-slate-300 hover:text-mint-400 transition-colors text-sm">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Legal -->
        <div>
          <h3 class="font-display text-lg font-medium text-white mb-4">Legal</h3>
          <ul class="space-y-3">
            {footerLinks.legal.map((link) => (
              <li>
                <a href={link.href} class="text-slate-300 hover:text-mint-400 transition-colors text-sm">
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-navy-800">
    <div class="max-w-7xl mx-auto px-6 lg:px-8 py-6">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
        <p class="text-slate-500 text-sm">
          &copy; {currentYear} Resilient Scents. All rights reserved.
        </p>

        <!-- Social Links -->
        <div class="flex items-center gap-6">
          <a href="#" class="text-slate-400 hover:text-mint-400 transition-colors" aria-label="Instagram">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
