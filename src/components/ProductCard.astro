---
interface Props {
  product: {
    id: number;
    slug: string;
    name: string;
    tagline: string;
    category: string;
    price: number;
    scent_notes: {
      top: string[];
      middle: string[];
      base: string[];
    };
    images: string[];
    featured?: boolean;
    badge?: string | null;
  };
  index?: number;
}

const { product, index = 0 } = Astro.props;
const delay = index * 100;
---

<a
  href={`/shop/${product.slug}`}
  class="card-product block reveal group"
  style={`animation-delay: ${delay}ms`}
>
  <!-- Image Container -->
  <div class="relative aspect-[3/4] overflow-hidden bg-gradient-to-br from-mint-100 to-white">
    <!-- Product Image -->
    <img
      src={product.images[0]}
      alt={product.name}
      class="absolute inset-0 w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
    />

    <!-- Badge -->
    {product.badge && (
      <div class="absolute top-4 left-4 z-10">
        <span class="inline-block px-3 py-1 bg-navy-800 text-white text-xs font-medium tracking-wide">
          {product.badge}
        </span>
      </div>
    )}

    <!-- Category Badge -->
    <div class="absolute top-4 right-4 z-10">
      <span class="inline-block px-3 py-1 bg-white/90 backdrop-blur-sm text-slate-600 text-xs font-medium tracking-wide capitalize">
        {product.category}
      </span>
    </div>

    <!-- Hover Overlay -->
    <div class="absolute inset-0 bg-navy-900/0 group-hover:bg-navy-900/10 transition-colors duration-500"></div>

    <!-- Quick View Button -->
    <div class="absolute inset-x-4 bottom-4 transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
      <span class="flex items-center justify-center w-full py-3 bg-white text-navy-900 text-sm font-medium tracking-wide hover:bg-navy-600 hover:text-white transition-colors">
        View Details
        <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="p-5 bg-mint-50/50">
    <div class="flex items-start justify-between gap-4 mb-2">
      <h3 class="font-display text-xl font-medium text-navy-900 group-hover:text-navy-600 transition-colors">
        {product.name}
      </h3>
      <span class="font-body text-lg font-medium text-navy-600">
        ${product.price}
      </span>
    </div>

    <p class="font-accent text-sm italic text-slate-500 mb-3">
      {product.tagline}
    </p>

    <!-- Scent Notes Preview -->
    <div class="flex flex-wrap gap-1.5">
      {product.scent_notes.top.slice(0, 2).map((note) => (
        <span class="px-2 py-0.5 bg-mint-100 text-navy-700 text-xs rounded-full">
          {note}
        </span>
      ))}
      {product.scent_notes.base.slice(0, 1).map((note) => (
        <span class="px-2 py-0.5 bg-navy-100 text-navy-600 text-xs rounded-full">
          {note}
        </span>
      ))}
    </div>
  </div>
</a>

<style>
  .card-product {
    opacity: 0;
    transform: translateY(20px);
    animation: fadeInUp 0.6s ease-out forwards;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
