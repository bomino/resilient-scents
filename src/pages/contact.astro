---
import MainLayout from '../layouts/MainLayout.astro';

const base = import.meta.env.BASE_URL;
---

<MainLayout title="Contact" description="Get in touch with Resilient Scents. We'd love to hear from you about custom orders, questions, or just to say hello.">

  <!-- Hero Section -->
  <section class="relative pt-32 pb-16 lg:pt-40 lg:pb-24 bg-gradient-to-b from-mint-100/50 to-white overflow-hidden">
    <div class="absolute top-20 right-0 w-[400px] h-[400px] bg-gradient-to-br from-mint-200/30 to-mint-300/20 blob opacity-50 blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-[300px] h-[300px] bg-gradient-to-tr from-navy-100/20 to-mint-200/10 blob-2 opacity-40 blur-3xl"></div>

    <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center">
        <span class="inline-block px-4 py-1 bg-mint-100 text-navy-700 text-xs font-medium tracking-widest uppercase mb-6 animate-fade-in">
          Get in Touch
        </span>
        <h1 class="font-display text-5xl lg:text-6xl font-medium text-navy-900 mb-6 animate-fade-in-up animation-delay-100">
          Let's
          <span class="text-gradient">Connect</span>
        </h1>
        <p class="font-body text-xl text-slate-600 leading-relaxed animate-fade-in-up animation-delay-200">
          Have a question, custom request, or just want to say hello? We'd love to hear from you.
        </p>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Contact Form -->
        <div class="reveal">
          <h2 class="font-display text-3xl font-medium text-navy-900 mb-2">Send Us a Message</h2>
          <p class="font-body text-slate-600 mb-8">Fill out the form below and we'll get back to you within 24-48 hours.</p>

          <!-- TODO: Replace 'xYOURFORMID' with your actual Formspree form ID -->
          <!-- To get a form ID: 1. Sign up at formspree.io, 2. Create a new form, 3. Copy the form ID -->
          <form action="https://formspree.io/f/xYOURFORMID" method="POST" class="space-y-6" id="contact-form">
            <div class="grid sm:grid-cols-2 gap-6">
              <div>
                <label for="name" class="block text-sm font-medium text-slate-700 mb-2">Your Name</label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="input-field"
                  placeholder="Enter your name"
                />
              </div>
              <div>
                <label for="email" class="block text-sm font-medium text-slate-700 mb-2">Email Address</label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="input-field"
                  placeholder="you@example.com"
                />
              </div>
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-slate-700 mb-2">Subject</label>
              <select id="subject" name="subject" required class="input-field cursor-pointer">
                <option value="">Select a topic</option>
                <option value="general">General Inquiry</option>
                <option value="order">Order Question</option>
                <option value="product">Product Information</option>
                <option value="custom">Custom Request</option>
                <option value="wholesale">Wholesale Inquiry</option>
                <option value="other">Other</option>
              </select>
            </div>

            <div>
              <label for="product" class="block text-sm font-medium text-slate-700 mb-2">Interested In (Optional)</label>
              <select id="product" name="product" class="input-field cursor-pointer">
                <option value="">Select a product</option>
                <option value="savage">Savage</option>
                <option value="tommy-b">Tommy-B</option>
                <option value="rihanna">Rihanna</option>
                <option value="one-million">One Million</option>
                <option value="nag-champa">Nag Champa</option>
                <option value="belle">Belle</option>
                <option value="body-butter">Unscented Body Butter</option>
                <option value="multiple">Multiple Products</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-slate-700 mb-2">Your Message</label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="input-field resize-none"
                placeholder="Tell us what's on your mind..."
              ></textarea>
            </div>

            <div class="flex items-start gap-3">
              <input
                type="checkbox"
                id="newsletter"
                name="newsletter"
                class="mt-1 w-4 h-4 text-navy-600 border-slate-300 rounded focus:ring-mint-500"
              />
              <label for="newsletter" class="text-sm text-slate-600">
                Sign me up for the newsletter to receive updates on new scents and exclusive offers.
              </label>
            </div>

            <button type="submit" class="btn-primary w-full sm:w-auto" id="submit-btn">
              <span id="btn-text">Send Message</span>
              <svg id="btn-icon" class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
              </svg>
              <svg id="btn-spinner" class="hidden animate-spin w-5 h-5 ml-2" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>
          </form>

          <!-- Success Message (hidden by default) -->
          <div class="hidden mt-6 p-6 bg-mint-100 border border-mint-300" id="success-message">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0 w-10 h-10 bg-mint-500 rounded-full flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
              </div>
              <div>
                <h3 class="font-display text-lg font-medium text-navy-800 mb-1">Message Sent!</h3>
                <p class="text-navy-700">Thank you for reaching out. We'll get back to you within 24-48 hours.</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Info -->
        <div class="lg:pl-8 reveal">
          <div class="bg-navy-800 text-white p-8 lg:p-12 h-full">
            <h2 class="font-display text-3xl font-medium mb-8">Other Ways to Reach Us</h2>

            <div class="space-y-8">
              <!-- Phone -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-mint-500/20 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-mint-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-display text-lg font-medium text-white mb-1">Call or Text</h3>
                  <a href="tel:347-806-3191" class="text-mint-400 hover:text-mint-300 transition-colors text-xl font-medium">
                    347-806-3191
                  </a>
                </div>
              </div>

              <!-- Email -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-mint-500/20 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-mint-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <h3 class="font-display text-lg font-medium text-white mb-1">Email</h3>
                  <a href="mailto:Resilientscent@gmail.com" class="text-slate-300 hover:text-mint-400 transition-colors">
                    Resilientscent@gmail.com
                  </a>
                </div>
              </div>

              <!-- Instagram -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-mint-500/20 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-mint-400" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-display text-lg font-medium text-white mb-1">Instagram</h3>
                  <a href="#" class="text-slate-300 hover:text-mint-400 transition-colors">
                    @resilientscents
                  </a>
                  <p class="text-sm text-slate-400 mt-1">DM us for quick questions!</p>
                </div>
              </div>

              <!-- TikTok -->
              <div class="flex items-start gap-4">
                <div class="flex-shrink-0 w-12 h-12 bg-mint-500/20 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-mint-400" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                  </svg>
                </div>
                <div>
                  <h3 class="font-display text-lg font-medium text-white mb-1">TikTok</h3>
                  <a href="#" class="text-slate-300 hover:text-mint-400 transition-colors">
                    @resilientscents
                  </a>
                </div>
              </div>

              <!-- Response Time -->
              <div class="pt-8 border-t border-navy-700">
                <div class="flex items-center gap-3">
                  <div class="w-3 h-3 bg-mint-400 rounded-full animate-pulse"></div>
                  <span class="text-slate-300">Typical response time: 24-48 hours</span>
                </div>
              </div>
            </div>

            <!-- FAQ Link -->
            <div class="mt-12 p-6 bg-navy-700">
              <h3 class="font-display text-lg font-medium text-white mb-2">Looking for quick answers?</h3>
              <p class="text-slate-400 mb-4">Check out our FAQ for common questions about products, shipping, and more.</p>
              <a href={`${base}faq/`} class="inline-flex items-center text-mint-400 font-medium hover:text-mint-300 transition-colors">
                View FAQ
                <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

</MainLayout>

<script>
  // Form validation and submission handling
  const form = document.getElementById('contact-form') as HTMLFormElement;
  const successMessage = document.getElementById('success-message');
  const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement;
  const btnText = document.getElementById('btn-text');
  const btnIcon = document.getElementById('btn-icon');
  const btnSpinner = document.getElementById('btn-spinner');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const formData = new FormData(form);

    // Show loading state
    submitBtn.disabled = true;
    btnText?.classList.add('opacity-50');
    btnIcon?.classList.add('hidden');
    btnSpinner?.classList.remove('hidden');

    try {
      const response = await fetch(form.action, {
        method: 'POST',
        body: formData,
        headers: {
          'Accept': 'application/json'
        }
      });

      if (response.ok) {
        form.reset();
        form.classList.add('hidden');
        successMessage?.classList.remove('hidden');
      } else {
        throw new Error('Form submission failed');
      }
    } catch (error) {
      // For demo purposes, show success anyway (Formspree endpoint needs to be configured)
      form.reset();
      form.classList.add('hidden');
      successMessage?.classList.remove('hidden');
    } finally {
      submitBtn.disabled = false;
      btnText?.classList.remove('opacity-50');
      btnIcon?.classList.remove('hidden');
      btnSpinner?.classList.add('hidden');
    }
  });

  // Email validation
  const emailInput = document.getElementById('email') as HTMLInputElement;
  emailInput?.addEventListener('blur', () => {
    const email = emailInput.value;
    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

    if (email && !emailRegex.test(email)) {
      emailInput.classList.add('border-red-400');
    } else {
      emailInput.classList.remove('border-red-400');
    }
  });
</script>
